    <div id="navbar">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/transfer">Transfer</a></li>
            <li><a href="/profile">Profile</a></li>
            
        </ul>
    </div>
</div>
<div id="main" class="centerpiece">
<%= yield %>
</div>

</body>
</html>